<menu
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="AlwaysShowAction">

    <item
        android:id="@+id/cut"
        android:icon="@drawable/ic_content_cut"
        app:showAsAction="always"
        android:title="@string/cut">
    </item>

    <item
        android:id="@+id/copy"
        android:icon="@drawable/ic_content_copy"
        app:showAsAction="always"
        android:title="@string/copy">
    </item>

    <item
        android:id="@+id/paste"
        android:icon="@drawable/ic_content_paste"
        app:showAsAction="always"
        android:title="@string/paste">

        <menu>
            <item
                android:id="@+id/paste_above"
                android:icon="@drawable/cic_new_above"
                android:title="@string/heads_action_menu_item_paste_above"/>

            <item
                android:id="@+id/paste_under"
                android:icon="@drawable/cic_new_under"
                android:title="@string/heads_action_menu_item_paste_under"/>

            <item
                android:id="@+id/paste_below"
                android:icon="@drawable/cic_new_below"
                android:title="@string/heads_action_menu_item_paste_below"/>
        </menu>
    </item>

    <item
        android:id="@+id/move"
        app:showAsAction="always"
        android:icon="@drawable/ic_swap_vert"
        android:title="@string/move">
    </item>

    <item
        android:id="@+id/clock"
        android:icon="@drawable/ic_hourglass_empty"
        app:showAsAction="never"
        android:title="@string/clock">
        <menu>
            <item
                android:id="@+id/clock_in"
                android:icon="@drawable/ic_hourglass_top"
                android:title="@string/clock_in" />

            <item
                android:id="@+id/clock_out"
                android:icon="@drawable/ic_hourglass_bottom"
                android:title="@string/clock_out" />

            <item
                android:id="@+id/clock_cancel"
                android:icon="@drawable/ic_hourglass_disabled"
                android:title="@string/clock_cancel" />
        </menu>
    </item>

    <item
        android:id="@+id/delete_note"
        app:showAsAction="never"
        android:title="@string/delete"/>
</menu>
