        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="FastScroll">
        <item name="fastScrollEnabled">true</item>
        <item name="fastScrollHorizontalThumbDrawable">@drawable/fast_scroll_thumb_drawable</item>
        <item name="fastScrollHorizontalTrackDrawable">@drawable/fast_scroll_line_drawable</item>
        <item name="fastScrollVerticalThumbDrawable">@drawable/fast_scroll_thumb_drawable</item>
        <item name="fastScrollVerticalTrackDrawable">@drawable/fast_scroll_line_drawable</item>
    </style>

    <style name="ListViewItem">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingStart">@dimen/screen_edge</item>
        <item name="android:paddingEnd">@dimen/screen_edge</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="BigCenteredText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/screen_edge</item>
        <item name="android:paddingBottom">?attr/actionBarSize</item>

        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>

        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleLarge</item>
    </style>

    <style name="LoadingProgressBar">
        <item name="android:indeterminate">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="WhatsNewNotice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="WhatsNewVersion">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="WhatsNewChange">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DrawerNavigationView">
        <item name="android:ellipsize">end</item>
    </style>

    <style name="CoordinatorLayoutFitsSystemWindows">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <!-- To avoid messed up graphics on some older devices -->
        <item name="android:background">?android:colorBackground</item>

        <!-- For FAB not to overlap with navigation bar -->
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="AppBarLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <!-- For top toolbar not to overlap with status bar -->
        <item name="android:fitsSystemWindows">true</item>

        <item name="liftOnScroll">false</item>
    </style>

    <style name="TopToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="SyncProgressIndicator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">-3dp</item>
        <item name="trackThickness">2dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="BottomToolbar" parent="Widget.Material3.BottomAppBar.Legacy">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:visibility">gone</item>
        <item name="menuAlignmentMode">auto</item>
    </style>

    <style name="Fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_margin">@dimen/screen_edge</item>
        <item name="fabCradleRoundedCornerRadius">0dp</item>
        <item name="fabCradleVerticalOffset">0dp</item>
    </style>

    <style name="Fab.Done">
        <item name="android:src">@drawable/ic_done</item>
    </style>

    <style name="Fab.Add">
        <item name="android:src">@drawable/ic_add</item>
    </style>

    <style name="HorizontalDivider">
